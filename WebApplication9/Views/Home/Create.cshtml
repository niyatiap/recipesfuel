@model WebApplication9.Models.Recipe
@using WebApplication9.Helper

@{ 
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-12">
            <div class="row">
                <div class="col-xl-8 col-lg-12 mx-auto">
                    <h1 class="mb-3">Share A Recipe</h1>
                   
                        @using (Html.BeginForm("NewCreate", "Home"))
                        {
                                  @Html.AntiForgeryToken()
                                    @Html.EditorForModel()
                                       <div class="form-group">
                                        <input type="submit" class="btn btn-primary" value="Create">
                                         </div>
                        }
                        <p>
                            @Html.AddLink("Add More Ingrediants", "#ingrediants", ".ingrediant", "Ingrediants", typeof(WebApplication9.Models.Ingrediant))
                        </p>
                    
  <script>
    function removeNestedForm(element, container, deleteElement) {
        $container = $(element).parents(container);
        $container.find(deleteElement).val('True');
        $container.hide();
    }

    function addNestedForm(container, counter, ticks, content) {
        var nextIndex = $(counter).length;
        var pattern = new RegExp(ticks, "gi");
        content = content.replace(pattern, nextIndex);
        $(container).append(content);
    }
    </script>

                </div>
            </div>
        </div>
    </div>
    <!-- END row -->
</div>