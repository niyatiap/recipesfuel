@model WebApplication9.Models.Recipe

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
<div class="row justify-content-center">
    <div class="col-xl-8 col-lg-12">
        <div class="row">
            <div class="col-xl-8 col-lg-12 mx-auto">
                <h1 class="mb-3">Update</h1>

                @using (Html.BeginForm())
                {
                @Html.AntiForgeryToken()

      
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.RecipeId)

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="fname">Cusine</label>                                   
                                        @Html.EditorFor(model => model.Cuisine, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Cuisine, "", new { @class = "text-danger" })                                   
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <div class="form-group">
                                        <label for="lname">Recipe Name</label>                                        
                                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })                                        
                                    </div>
                                    </div>
                                </div>
                                </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="fname">Preparation Time</label>
                                   @Html.EditorFor(model => model.PreparationTime, new { htmlAttributes = new { @class = "form-control" } })
                                   @Html.ValidationMessageFor(model => model.PreparationTime, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="lname">Cooking Time</label>
                                    @Html.EditorFor(model => model.CookingTime, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.CookingTime, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="lname">Serves</label>
                            @Html.EditorFor(model => model.Serves, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Serves, "", new { @class = "text-danger" })
                        </div>
                              
                        <div id="ingrediants">
                            @Html.EditorFor(x => x.Ingrediants)
                        </div>

                        <div class="form-group mb-4">                            
                            <label for="message">Method</label>
                           @Html.EditorFor(model => model.Method, new { htmlAttributes = new { @class = "form-control" } })
                           @Html.ValidationMessageFor(model => model.Method, "", new { @class = "text-danger" })
                        </div>

                        
                        <div class="form-group">
                            <label for="lname">Image</label>
                            @Html.EditorFor(model => model.ImagePath, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ImagePath, "", new { @class = "text-danger" })
                        </div>
                      
                                <div class="form-group">
                                        <input type="submit" value="Save" class="btn btn-primary" />
                                    </div>
                         
                            }

                            <div>
                                @Html.ActionLink("Back to List", "Index")
                            </div>

                            <script src="~/Scripts/jquery-1.10.2.min.js"></script>
                            <script src="~/Scripts/jquery.validate.min.js"></script>
                            <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
                        </div>
                    </div>
               </div>
        </div>
</div>